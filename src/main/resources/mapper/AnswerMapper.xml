<?xml version="1.0" encoding="utf-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.gzu.queswer.dao.AnswerDao">
    <insert id="insertAnswer" useGeneratedKeys="true" keyProperty="aId">
        INSERT INTO t_answer (gmt_create, u_id, q_id, ans, anonymous)
        VALUES (#{gmtCreate}, #{uId}, #{qId}, #{ans}, #{anonymous})
    </insert>
    <update id="updateAnswer">
        UPDATE t_answer
        SET ans=#{ans},
            gmt_modify=#{gmtModify},
            anonymous=#{anonymous}
        WHERE a_id = #{aId}
    </update>
    <delete id="deleteAnswer">
        DELETE
        FROM t_answer
        WHERE a_id = #{aId}
    </delete>
    <select id="selectAnswerbyAId" resultType="com.gzu.queswer.model.Answer">
        SELECT a_id,q_id,u_id,ans,gmt_create,gmt_modify,anonymous
        FROM t_answer
        WHERE a_id = #{aId}
    </select>
</mapper>