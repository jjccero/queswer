<?xml version="1.0" encoding="utf-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.gzu.queswer.dao.TopicDao">
    <select id="selectTopics" resultType="com.gzu.queswer.model.Topic">
        SELECT *
        FROM t_topic;
    </select>
    <select id="selectTopicByTid" resultType="com.gzu.queswer.model.Topic">
        SELECT *
        FROM t_topic
        WHERE t_id = #{tId};
    </select>
    <insert id="insertTopic" useGeneratedKeys="true" keyProperty="tId">
        INSERT INTO t_topic (topic_name)
        VALUES (#{topicName});
    </insert>
    <select id="selectQuestionTopics" resultType="Long">
        SELECT t_id
        FROM t_question_topic
        WHERE q_id = #{qId};
    </select>
</mapper>