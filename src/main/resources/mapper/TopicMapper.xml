<?xml version="1.0" encoding="utf-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.gzu.queswer.dao.TopicDao">
    <insert id="insertTopic" useGeneratedKeys="true" keyProperty="tId">
        INSERT INTO t_topic (topic_name)
        VALUES (#{topicName});
    </insert>
    <select id="selectTopics" resultType="com.gzu.queswer.model.Topic">
        SELECT *
        FROM t_topic;
    </select>
    <select id="selectTopic" resultType="com.gzu.queswer.model.Topic">
        SELECT *
        FROM t_topic
        WHERE topic_id = #{topicId};
    </select>
    <select id="selectTopicIdsByQuestionId" resultType="Long">
        SELECT topic_id
        FROM t_question_topic
        WHERE question_id = #{questionId};
    </select>
</mapper>